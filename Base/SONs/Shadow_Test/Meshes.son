# Meshes.son #
##############
# A SON File that specifies the Meshes to load into the game
# All Meshes must be contained in a branch named MeshContainer
# Different Meshes will require different attributes, see below for details
# Mesh [FileName] must have no spaces
{
	[Name] MeshContainer
	# Criticals DO NOT TOUCH
	{
		[Name] DefaultFont
		[Type] Font
		[Texture] Calibri
	}
	# Others
	{
		[Name] Ball
		[Type] Sphere
		[Color] 1.0f, 0.0f, 0.0f
		[Stacks] 12
		[Slices] 12
		[Radius] 1.0f
		[Material] Cement
	}
	{
		[Name] Box
		[Type] Cube
		[Color] 1.0f, 0.0f, 0.0f
		[Length] 1.0f
		[Material] Cement
	}
	{
		[Name] Cone
		[Type] Cone
		[Color] 1.0f, 0.0f, 0.0f
		[Radius] 1.0f
		[Height] 1.0f
	}
	{
		[Name] Floor
		[Type] Cube
		[Color] 0.0f, 1.0f, 1.0f
		[Length] 1.0f
		[Material] Cement
	}
	{
		[Name] LightDepthQuad
		[Type] 2D
		[PosX] 0
		[PosY] 0
		[Width] 100
		[Height] 100
	}
	{
		[Name] Axes
		[Type] Axes
		[Length] 1000.0f
	}
